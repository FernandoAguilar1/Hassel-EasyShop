@model EasyShop.Models.Order

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isCustomer = User.IsInRole("Customer");
}

<h1>Your Order (Shopping Cart)</h1>

<div>
    <a asp-action="Index" asp-controller="Products">Back to Products List</a>
</div>

@if (isCustomer)
{
    @if (Model == null)
    {
        <h4>You haven't place any Order yet. Add a product to see your order</h4>
    }
    else
    {
        <div>
            <hr />
            <h4>Order data</h4>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
        </div>

        <h4>Products</h4>
        @if (Model.Details != null)
        {
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Single Value
                        </th>
                        <th>
                            Total Value
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>
                                @item.ProductId
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.SingleValue
                            </td>
                            <td>
                                @item.TotalValue
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id">Remove Item</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-12 text-end">
                    <input type="button"  class="btn btn-primary" value="Go to payment" >
                </div>
            </div>
        }
        else
        {
            <p>This order doesn't have any product's</p>
        }

}
}
else
{
    <h4>
        This section is only for registered users, please login to place an order
    </h4>
}


